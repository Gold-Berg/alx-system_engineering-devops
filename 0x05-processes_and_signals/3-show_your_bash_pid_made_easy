#!/usr/bin/env bash
# Bash script to display PID and process name of processes containing the word "bash"
for pid in /proc/[0-9]*/cmdline; do
    process_name=$(tr -d '\0' < "$pid")  # Extract the process name from the cmdline file
    if [[ $process_name == *bash* ]]; then
        current_pid=$(basename "$(dirname "$pid")")  # Extract the PID from the directory name
        echo "PID: $current_pid, Process Name: $process_name"
    fi
done
